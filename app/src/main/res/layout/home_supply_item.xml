<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/black"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/black"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/hfoodItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:padding="1dp"
            android:text="Food Item"
            android:textColor="#FF731D"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hfoodamount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hfoodItem"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:padding="1dp"
            android:text="Food amount"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/hfoodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/hfooddate"
            android:layout_below="@+id/hfoodItem"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/hfoodamount"
            android:padding="1dp"
            android:text="g"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/hfoodbroughtD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hfoodamount"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:padding="1dp"
            android:text="Brought on:"
            android:textColor="#C6C6C6"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hfooddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hfoodamount"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/hfoodbroughtD"
            android:padding="1dp"
            android:text="24-15-2022"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hfoodbroughtD"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChange"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Change"
                style="?attr/materialButtonOutlinedStyle"
                android:textColor="@color/orange"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btnRemove"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/orange"
                style="?attr/materialButtonOutlinedStyle"
                android:shadowColor="@color/orange"
                android:text="Remove"
                android:textAllCaps="false"
                android:textSize="24dp" />

        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>